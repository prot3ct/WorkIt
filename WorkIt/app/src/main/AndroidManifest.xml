<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prot3ct.workit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.register.RegisterActivity" />
        <activity android:name=".views.list_jobs.ListJobsActivity" />
        <activity android:name=".views.create_job.CreateJobActivity" />
        <activity
            android:name=".views.job_details.JobDetailsActivity"
            android:label="@string/title_activity_job_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.task_request_details.TaskRequestDetailsActivity"
            android:label="@string/title_activity_task_request_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.list_pending_requests.ListPendingRequestsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>